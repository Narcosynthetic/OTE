SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
create PROCEDURE [dbo].[UpdateUserTheming] 
(
	@UserId int,
	@backColor varchar(50),
	@foreColor varchar(50)
)
AS
BEGIN
	SET NOCOUNT ON;
	
	IF (LEN(@backColor) > 0)
		UPDATE [dbo].[Users]
		SET BackColor = @backColor
		WHERE UserId = @UserId
     
	IF (LEN(@foreColor) > 0)
		UPDATE [dbo].[Users]
		SET ForeColor = @foreColor
		WHERE UserId = @UserId
     
END
